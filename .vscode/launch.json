{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Anki",
            "type": "python",
            "request": "launch",
            "module": "development.launch_anki",
            "env": {
                "DISABLE_QT5_COMPAT": "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Build",
            "type": "python",
            "request": "launch",
            "program": "build.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Build - 0.0.0-dev",
            "type": "python",
            "request": "launch",
            "program": "build.py",
            "args": [ "-v", "0.0.0-dev" ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Convert Readme",
            "type": "python",
            "request": "launch",
            "program": "convert_readme.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
